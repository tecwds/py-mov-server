<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.wpaint.pymov.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="top.wpaint.pymov.domain.User">
        <id property="userId" column="user_id"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="occupation" column="occupation"/>
        <result property="zipCode" column="zip_code"/>
        <result property="username" column="username"/>
        <result property="nickname" column="nickname"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,gender,age,occupation,zip_code,username,
        nickname,password,email
    </sql>

    <!-- 查询所有用户 -->
    <select id="selectByUsername" resultType="top.wpaint.pymov.domain.User">
        select
        <include refid="Base_Column_List"/>
        from pv_user where username = #{username}
    </select>
</mapper>
